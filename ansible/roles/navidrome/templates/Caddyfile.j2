{{ navidrome_domain }} {
	reverse_proxy 127.0.0.1:{{ navidrome_port }} {
		header_up Host {host}
		header_up X-Real-IP {remote_ip}
		header_up X-Forwarded-For {remote_ip}
		header_up X-Forwarded-Proto {scheme}
	}

	request_body {
		max_size 100M
	}

	encode gzip

	log {
		output file /var/log/caddy/{{ navidrome_domain }}.log
	}
}
