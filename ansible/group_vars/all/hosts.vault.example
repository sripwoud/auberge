---
# Example vault file for sensitive host data
# Copy to hosts.vault and encrypt with:
# ansible-vault encrypt group_vars/all/hosts.vault

# Self-hosting IPs
vault_selfhost_old_host: "203.0.113.10"
vault_selfhost_host: "203.0.113.20"

# Vibecoding IP
vault_vibecoder_host: "203.0.113.30"

# User configuration
vault_admin_user_name: "your-username"
vault_admin_user_email: "you@example.com"
vault_primary_domain: "example.com"

# Namecheap API configuration
vault_namecheap_api_user: "your-namecheap-username"

# Sudo passwords (for your admin user)
vault_admin_become_password: "your-sudo-password-here"